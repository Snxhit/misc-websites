---

import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/navigation.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import '../styles/global.css'

const title = "About";

const identity =
  {
    firstName: "Snxhit",
    country: "Cloud Nine",
    occupation: "Student",
    hobbies: ["Basketball", "Badminton", "Programming"],
    skills: ["HTML", "CSS", "JavaScript", "Python", "Rust", "C", "C#", "Lua", "React", "Astro", "Game Developement", "Novel Writing", "Producing"],
  };

const happy = false;
const finishedWithTutorial = false;
const goal = 3;

const skillColor = "navy";
const skillWeight = "bold";
const skillCase = "upperCase";
---

<BaseLayout title={title}>
  <style is:global define:vars={{ skillColor, skillWeight, skillCase }}>
      h1
      {
        color: purple;
        font-size: 4rem;
      }
      .skill
      {
        color: var(--skillColor);
        font-weight: var(--skillWeight);
        text-transform: var(--skillCase);
      }
  </style>
  <h3>And this website!</h3>

  <p>This website is a tutorial I'm working on, to learn more about Astro.</p>
  {happy && <p>I am happy right now :)</p>}
  {finishedWithTutorial && <p>I am done with the Astro tutorial!</p>}
  {goal === 3 ? <p>My goal is to finish in three days!</p> : <p>My goal is not three days.</p>}
  <p>Here are a few facts about me for now:</p>

  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country}, and am currently a {identity.occupation}!</li>
    {identity.hobbies.length >= 2 &&
      <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
    }
  </ul>

  <p>My technical skills are:</p>
  <ol>
    {identity.skills.map((skill) => <li class="skill">{skill}</li>)}
  </ol>
</BaseLayout>
